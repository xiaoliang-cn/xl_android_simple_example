<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/data_store_example"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DataStore_Example"
    />

    <Button
        android:id="@+id/navigation_example"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="navigation_example"
        />

    <Button
        android:id="@+id/dataBinDing_example"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dataBinDing_example"
        />


    <Button
        android:id="@+id/lifecycleOwner_example"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lifecycleOwner_example"
        />

    <Button
        android:id="@+id/pagingExample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pagingExample"
        />
    <Button
        android:id="@+id/contacts_scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="联系人滑动"
        />


</LinearLayout>